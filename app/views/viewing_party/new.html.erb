<h2><%="#{@host.name}'s Viewing Party" %></h2>
<h3>Movie Title: <%= @movie.title %></h3>

<%= form_with url: user_movie_viewing_party_index_path(@host.id, @movie.id, params: { :host => @host.email, :movie_name => @movie.title, :movie_runtime => @movie.runtime }), method: :post, local: true do |f| %>
  <%= f.label :duration, "Enter Duration Minutes: " %>
  <%= f.text_field :duration, value: @movie.runtime %>

  <%= f.label :date %>
  <%= f.date_field :date  %>

  <%= f.label :start_time %>
  <%= f.time_field :start_time  %>

  <% @users.each do |user| %>
    <%= f.label user.email.to_sym %>
    <%= f.check_box user.email.to_sym %>
  <% end %>

  <%= f.submit "Create Party" %>
<% end %>
