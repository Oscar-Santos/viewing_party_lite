<h1>Discover Movies</h1>

<h3><%= button_to 'Top Rated Movies', user_movies_path(@user.id), params: { :q => 'top%20rated'}, method: :get %></h3>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
    <%= f.label :q, 'Search by Keyword' %>
    <%= f.text_field :q %>
    <%= f.submit "Search" %>
<% end %>
