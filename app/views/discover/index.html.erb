<h1>Discover Movies</h1>

<h3><%= button_to 'Top Rated Movies', user_movies_path(@user.id, :top_rated => 'true'), method: :get %></h3>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
    <%= f.label :search, 'Search by Keyword' %>
    <%= f.text_field :search %>
    <%= f.submit "Search" %>
<% end %>